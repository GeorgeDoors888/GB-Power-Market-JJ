{
  // Essential extensions for agent mode - GitHub Copilot and Python only
  "recommendations": [
    // GitHub Copilot for AI assistance
    "github.copilot",
    "github.copilot-chat",
    
    // Python development
    "ms-python.python",
    "ms-python.vscode-pylance"
  ],
  
  // Prevent these common extensions from being auto-installed
  "unwantedRecommendations": [
    // Language servers that might not be needed (keeping Python allowed)
    "ms-python.flake8",
    "ms-python.pylint",
    "ms-python.black-formatter",
    "ms-vscode.powershell",
    "ms-dotnettools.csharp",
    "ms-vscode.cpptools",
    "ms-vscode.cpptools-extension-pack",
    "golang.go",
    "rust-lang.rust-analyzer",
    "redhat.java",
    "vscjava.vscode-java-pack",
    "ms-vscode.vscode-typescript-next",
    
    // Heavy extensions that slow down VS Code
    "ms-vscode.vscode-docker",
    "ms-kubernetes-tools.vscode-kubernetes-tools",
    "ms-azuretools.vscode-azureresourcegroups",
    "ms-vscode-remote.remote-containers",
    "ms-vscode-remote.remote-ssh",
    "ms-vscode-remote.remote-wsl",
    "ms-vscode.remote-explorer",
    "ms-vscode.remote-repositories",
    
    // AI/Copilot extensions (GitHub Copilot allowed, others blocked)
    "github.copilot-labs",
    "tabnine.tabnine-vscode",
    "visualstudioexptteam.vscodeintellicode",
    
