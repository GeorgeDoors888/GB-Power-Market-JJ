    {
      "label": "Format",
      "type": "shell",
      "command": "'/workspaces/jibber-jabber 24 august 2025 big bop/.venv/bin/python' -m black . && '/workspaces/jibber-jabber 24 august 2025 big bop/.venv/bin/python' -m isort . --profile black",
