{
  "openapi": "3.1.0",
  "info": {
    "title": "Power Market AI Gateway",
    "description": "Full AI access to all BigQuery datasets: caselaw_judgments (4M UK court judgments), uk_energy_prod (2.5M energy docs), legislation, companies_house",
    "version": "3.1.0"
  },
  "servers": [
    {
      "url": "https://94.237.55.15",
      "description": "Production UpCloud server"
    }
  ],
  "paths": {
    "/bigquery/execute": {
      "post": {
        "summary": "Query Any BigQuery Dataset",
        "description": "Execute queries across ALL datasets: caselaw_judgments.judgments (4M judgments), uk_energy_prod.document_chunks (2.5M docs), uk_legislation, companies_house, thesis_index. Supports SELECT/CREATE/UPDATE/DELETE.",
        "operationId": "execute_bigquery",
        "security": [
          {
            "HTTPBearer": []
          }
        ],
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "SQL query for any dataset"
          },
          {
            "name": "dry_run",
            "in": "query",
            "required": false,
            "schema": {
              "type": "boolean",
              "default": true
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Query results"
          }
        }
      }
    },
    "/bigquery/caselaw/search": {
      "get": {
        "summary": "Search 4M UK Court Judgments",
        "description": "Search caselaw_judgments.judgments - all UK courts",
        "operationId": "search_caselaw",
        "security": [
          {
            "HTTPBearer": []
          }
        ],
        "parameters": [
          {
            "name": "keywords",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "court",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": [
                "all",
                "uksc",
                "ewca",
                "ewhc",
                "ukftt",
                "ukut"
              ]
            }
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Matching judgments"
          }
        }
      }
    },
    "/bigquery/datasets": {
      "get": {
        "summary": "List All BigQuery Datasets",
        "description": "Show all available datasets and tables with row counts",
        "operationId": "list_datasets",
        "security": [
          {
            "HTTPBearer": []
          }
        ],
        "responses": {
          "200": {
            "description": "Datasets list"
          }
        }
      }
    },
    "/bigquery/prices": {
      "get": {
        "summary": "Get Electricity Prices",
        "operationId": "get_prices",
        "security": [
          {
            "HTTPBearer": []
          }
        ],
        "parameters": [
          {
            "name": "days",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 7
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Price data"
          }
        }
      }
    },
    "/bigquery/generation": {
      "get": {
        "summary": "Get Generation Mix",
        "operationId": "get_generation",
        "security": [
          {
            "HTTPBearer": []
          }
        ],
        "parameters": [
          {
            "name": "days",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 7
            }
          },
          {
            "name": "fuel_type",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Generation data"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "HTTPBearer": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}